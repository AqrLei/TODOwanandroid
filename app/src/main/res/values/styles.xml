<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/activityAnimStyle</item>
    </style>

    <style name="launcherTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/layer_launcher_full_background</item>
    </style>

    <style name="activityAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/act_next_in</item>
        <item name="android:activityOpenExitAnimation">@anim/act_next_current_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/act_last_in</item>
        <item name="android:activityCloseExitAnimation">@anim/act_last_current_out</item>
    </style>

    <style name="HorizontalDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="NavigationTextStyle">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/view_vertical_margin_small</item>
        <item name="android:paddingBottom">@dimen/view_vertical_margin_small</item>
        <item name="android:paddingLeft">@dimen/view_vertical_margin_small</item>
        <item name="android:drawablePadding">@dimen/text_padding</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Base.Theme.MaterialComponents.Light.DialogWhenLarge">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="NavMainRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/text_padding</item>
        <item name="android:paddingTop">@dimen/text_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/selector_text_color_nav</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="NavTodoRadioButtonStyle" parent="NavMainRadioButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_nav_todo_item_background</item>
        <item name="android:textColor">@color/selector_text_color_nav_todo</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="app:autoSizeMinTextSize">@dimen/text_size_small</item>
        <item name="app:autoSizeMaxTextSize">@dimen/text_size_large</item>
        <item name="app:autoSizeStepGranularity">@dimen/auto_text_size_step</item>
        <item name="app:autoSizeTextType">uniform</item>
    </style>

</resources>
